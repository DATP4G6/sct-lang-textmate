{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Societal Construction Tool",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sct",
          "begin": "//",
          "end": "\n"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sct",
          "match": "\\b(if|else|while|return|enter|create|destroy)\\b"
        },
        {
          "name": "entity.name.type",
          "match": "\\b(int|float|void)\\b"
        },
        {
          "name": "keyword.other.sct",
          "match": "\\b(species|function|decorator|state)\\b",
          "patterns": [
            {
              "name": "variable",
              "match": "(Town)"
            }
          ]
        },
        {
          "name": "entity.name.class",
          "match": "(Town)"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name",
          "match": "(@\\w[\\w\\d_]*)"
        },
        {
          "name": "entity.name.function",
          "begin": "state ",
          "end": "\\{"
        },
        {
          "name": "entity.name.function",
          "match": "([a-zA-Z_][a-zA-Z0-9_]+)\\("
        },
        {
          "name": "variable",
          "match": "([a-zA-Z_][a-zA-Z0-9_]+)"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric",
          "match": "([0-9]+)"
        },
        {
          "name": "constant.numeric",
          "match": "([0-9]+\\.[0-9]+)"
        }
      ]
    }
  },
  "scopeName": "source.sct"
}
